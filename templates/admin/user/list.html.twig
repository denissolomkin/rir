{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_user_index' %}

{% block main %}
    <h1>{{ 'title.user_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ 'label.username'|trans }}</th>
            <th scope="col">{{ 'label.fullname'|trans }}</th>
            <th scope="col">{{ 'label.role'|trans }}</th>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for item in list %}
            <tr>
                <td>{{ item.username }} </td>
                <td>{{ item.fullname }}
                    {% set roles = [] %}
                    {% for role in item.roles %}
                        {% set roles = roles|merge([constant(role, item)|trans]) %}
                    {% endfor %}
                <td>{{ roles|join(', ') }} </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'item.no_users_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> {{ 'action.create'|trans }}
        </a>
    </div>

    {{ parent() }}

    {{ (_self) }}
{% endblock %}
