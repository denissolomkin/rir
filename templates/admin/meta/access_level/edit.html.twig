{% extends 'base.html.twig' %}

{% block body_id 'admin_meta_access_level_edit' %}

{% block main %}
    <h1>{{ 'title.resource.access_level.edit'|trans({'%id%': post.id}) }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
    </button>

    <a href="{{ path('admin_meta_access_level_index') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_list'|trans }}
    </a>
    {{ form_end(form) }}

{% endblock %}

{% block sidebar %}

    {{ parent() }}

    {{ (_self) }}
{% endblock %}
