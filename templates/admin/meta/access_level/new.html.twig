{% extends 'base.html.twig' %}

{% block body_id 'admin_meta_access_level_new' %}

{% block main %}
    <h1>{{ 'title.resource_access_level_new'|trans }}</h1>

    {{ form_start(form) }}
        {{ form_row(form.name) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.create_resource_access_level'|trans }}
        </button>
        {{ form_widget(form.saveAndCreateNew, {label: 'label.save_and_create_new', attr: {class: 'btn btn-primary'}}) }}
        <a href="{{ path('admin_meta_access_level_index') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_resource_access_level_list'|trans }}
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {{ (_self) }}
{% endblock %}
