{#
   This is the base template of the all backend pages. Since this layout is similar
   to the global layout, we inherit from it to just change the contents of some
   blocks. In practice, backend templates are using a three-level inheritance,
   showing how powerful, yet easy to use, is Twig's inheritance mechanism.
   See https://symfony.com/doc/current/book/templating.html#template-inheritance-and-layouts
#}
{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('css/admin') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('js/admin') }}
{% endblock %}

{% block header_navigation_links %}

    <li>
        <a href="{{ path('admin_resource_index') }}">
            <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'menu.resource.list'|trans }}
        </a>
    </li>

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" id="meta">
            <i class="fa fa-tags" aria-hidden="true"></i></i> {{ 'menu.resource.meta'|trans }}
            <span class="caret"></span>
            <span class="sr-only">{{ 'menu.resource.meta'|trans }}</span>
        </a>
        <ul class="dropdown-menu meta" role="menu" aria-labelledby="meta">
            <li>
                <a href="{{ path('admin_resource_access_level_index') }}">
                    <i class="fa fa-user-secret" aria-hidden="true"></i> {{ 'menu.resource.access_level'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_resource_access_level_index') }}">
                    <i class="fa fa-file-word-o" aria-hidden="true"></i> {{ 'menu.resource.document_type'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_resource_access_level_index') }}">
                    <i class="fa fa-file" aria-hidden="true"></i> {{ 'menu.resource.type'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_resource_access_level_index') }}">
                    <i class="fa fa-key" aria-hidden="true"></i> {{ 'menu.resource.purpose'|trans }}
                </a>
            </li>
            <li>
                <a href="{{ path('admin_resource_access_level_index') }}">
                    <i class="fa fa-tag" aria-hidden="true"></i> {{ 'menu.resource.keyword'|trans }}
                </a>
            </li>
        </ul>
    </li>

    {% if is_granted('ROLE_ADMIN') %}
    <li>
        <a href="{{ path('admin_user_index') }}">
            <i class="fa fa-users" aria-hidden="true"></i> {{ 'menu.users'|trans }}
        </a>
    </li>
    {% endif %}

{% endblock %}
