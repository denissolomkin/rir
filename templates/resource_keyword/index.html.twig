{% extends 'base.html.twig' %}

{% block title %}ResourceKeyword index{% endblock %}

{% block body %}
    <h1>ResourceKeyword index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_keyword in resource_keywords %}
            <tr>
                <td>{{ resource_keyword.id }}</td>
                <td>{{ resource_keyword.name }}</td>
                <td>
                    <a href="{{ path('resource_keyword_show', {'id': resource_keyword.id}) }}">show</a>
                    <a href="{{ path('resource_keyword_edit', {'id': resource_keyword.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('resource_keyword_new') }}">Create new</a>
{% endblock %}
