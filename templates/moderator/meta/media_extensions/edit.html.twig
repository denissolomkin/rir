{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_resource_access_level_edit' %}

{% block main %}
    <h1>{{ 'title.edit_resource_access_level'|trans({'%id%': post.id}) }}</h1>

    {{ form_start(form) }}
    {{ form_row(form.name) }}

    <button type="submit" class="btn btn-primary">
        <i class="fa fa-save" aria-hidden="true"></i> {{ 'label.save_resource_access_level'|trans }}
    </button>

    <a href="{{ path('admin_resource_access_level_index') }}" class="btn btn-link">
        <i class="fa fa-list-alt" aria-hidden="true"></i> {{ 'action.back_to_resource_access_level_list'|trans }}
    </a>
    {{ form_end(form) }}

{% endblock %}

{% block sidebar %}

    {{ parent() }}

    {{ (_self) }}
{% endblock %}
