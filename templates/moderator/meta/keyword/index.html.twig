{% extends 'base.html.twig' %}

{% block title %}{{ 'title.meta.keyword'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'title.meta.keyword'|trans }}</h1>
    {{ 'help.resource.keyword'|trans }}
    <hr/>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'label.name'|trans}}</th>
                <th>{{'label.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_keyword in resource_keywords %}
            <tr>
                <td>{{ resource_keyword.id }}</td>
                <td>{{ resource_keyword.name }}</td>
                <td>
                    <a href="{{ path('moderator_meta_keyword_show', {'id': resource_keyword.id}) }}">{{'action.show'|trans}}</a>
                    <a href="{{ path('moderator_meta_keyword_edit', {'id': resource_keyword.id}) }}">{{'action.edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('moderator_meta_keyword_new') }}">{{'action.create'|trans}}</a>
{% endblock %}
