{% extends 'base.html.twig' %}

{% block title %}{{ 'title.meta.media_type'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'title.meta.media_type'|trans }}</h1>
    {{ 'help.resource.media_type'|trans }}
    <hr/>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'label.name'|trans}}</th>
                <th>{{'label.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for moderator_meta_media_type in moderator_meta_media_types %}
            <tr>
                <td>{{ moderator_meta_media_type.id }}</td>
                <td>{{ moderator_meta_media_type.name }}</td>
                <td>
                    <a href="{{ path('moderator_meta_media_type_show', {'id': moderator_meta_media_type.id}) }}">{{'action.show'|trans}}</a>
                    <a href="{{ path('moderator_meta_media_type_edit', {'id': moderator_meta_media_type.id}) }}">{{'action.edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('moderator_meta_media_type_new') }}">{{'action.create'|trans}}</a>
{% endblock %}
