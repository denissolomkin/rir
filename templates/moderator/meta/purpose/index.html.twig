{% extends 'base.html.twig' %}

{% block title %}ResourcePurpose index{% endblock %}

{% block body %}
    <h1>ResourcePurpose index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'label.name'|trans}}</th>
                <th>{{'label.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_purpose in resource_purposes %}
            <tr>
                <td>{{ resource_purpose.id }}</td>
                <td>{{ resource_purpose.name }}</td>
                <td>
                    <a href="{{ path('moderator_meta_purpose_show', {'id': resource_purpose.id}) }}">{{'action.show'|trans}}</a>
                    <a href="{{ path('moderator_meta_purpose_edit', {'id': resource_purpose.id}) }}">{{'action.edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('moderator_meta_purpose_new') }}">{{'action.create'|trans}}</a>
{% endblock %}
