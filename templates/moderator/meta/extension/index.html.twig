{% extends 'base.html.twig' %}

{% block title %}{{ 'title.meta.extension'|trans }}{% endblock %}

{% block body %}
    <h1>{{ 'title.meta.extension'|trans }}</h1>
    {{ 'help.resource.extension'|trans }}
    <hr/>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{'label.name'|trans}}</th>
                <th>{{'label.actions'|trans}}</th>
            </tr>
        </thead>
        <tbody>
        {% for resource_extension in resource_extensions %}
            <tr>
                <td>{{ resource_extension.id }}</td>
                <td>{{ resource_extension.name }}</td>
                <td>
                    <a href="{{ path('moderator_meta_extension_show', {'id': resource_extension.id}) }}">{{'action.show'|trans}}</a>
                    <a href="{{ path('moderator_meta_extension_edit', {'id': resource_extension.id}) }}">{{'action.edit'|trans}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('moderator_meta_extension_new') }}">{{'action.create'|trans}}</a>
{% endblock %}
